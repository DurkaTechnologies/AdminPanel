@{
    ViewData["Title"] = "Профіль";
}
@using WebUI
@using WebUI.Areas.Admin.Models
@model UserViewModel
@using System.IO
@using WebUI.Services

<div class="container">
    <div class="row">
        <div class="col-xl-4 col-lg-5">
            <div class="card pb-3">
                <div class="position-relative p-3">
                    @if (Model.ProfilePicture != null)
                    {
                        <img id="profilePicture" class="rounded-circle" style="width: 100%;object-fit: cover; padding-top: 10px;" src="@ENV.ImagePath@Model.ProfilePicture">
                    }
                    else
                    {
                        <img id="profilePicture" class="rounded-circle" style="width: 100%; object-fit: cover; padding-top: 10px;" src="~/images/users/default-user.png">
                    }
                </div>
                <div class="mx-auto">
                    <h3 class="profile-username text-center pb-2">@Model.FirstName @Model.MiddleName @Model.LastName</h3>
                    <h5 class="text-muted pb-2"><i class="fas fa-mail-bulk"></i> @Model.Email</h5>

                    @if (!String.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <h5 class="text-muted pb-2">
                            <i class="fas fa-phone"></i>
                            @Model.PhoneNumber
                        </h5>
                    }

                    @if (@Model.Community != null)
                    {
                        <h5 class="text-muted pb-2">
                            <i class="fas fa-users"></i>
                            @Model.Community.Name
                        </h5>
                    }
                </div>
            </div>
        </div>
        <div class="col-xl-8 col-lg-7">
            @if (!String.IsNullOrEmpty(Model.Description)) 
            {
            <div class="card p-4">
                <label class="col-form-label text-center d-block">Опис</label>
                @Html.Raw(Model.Description)
            </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <a id="update-profile-button ml-auto" class="btn btn-success btn-icon-split" asp-controller="Profile" asp-action="Edit" asp-route-id="@Model.Id">
            <span class="icon text-white-50">
                <i class="fas fa-pen"></i>
            </span>
            <span class="text">Редагувати</span>
        </a>
    </div>
</div>

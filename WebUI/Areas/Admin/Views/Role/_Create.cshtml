@using WebUI.Areas.Admin.Models
@model RoleViewModel

<form id="create-form" method="post" asp-area="Admin" asp-controller="Role" asp-route-id="@Model.Id" asp-action="OnPostCreate" onsubmit="return jQueryModalPost(this);">
	<div class="form-group row">
		<label class="col-md-3 col-form-label">Ім'я</label>
		<div class="col-md-9">
			<input type="text" asp-for="Name" name="Name" class="form-control">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group justify-content-between" style="margin-bottom: 0px !important">
		<button type="submit" class="btn btn-success mr-2">
			<span class="icon text-white-50">
				<i class="fas fa-check"></i>
			</span>
			Зберегти
		</button>
		<button type="submit" class="btn btn-default close-button" data-dismiss="modal">
			<span class="icon text-dark-50" style="opacity: 50%">
				<i class="fas fa-times"></i>
			</span>
			Відмінити
		</button>
	</div>
</form>

<script type="text/javascript" language=javascript>
	$.validator.unobtrusive.parse(document);
</script>

@using AdminPanel.WebUI.Areas.Entities.Models
@using AdminPanel.Application.Constants

@model IEnumerable<CommunityViewModel>
<table id="brandTable" class="table table-striped" width="100%" cellspacing="0">
	<thead>
		<tr>
			<th>ІД</th>
			<th>Ім'я</th>
			@if ((AuthorizationService.AuthorizeAsync(User, Permissions.Communities.Delete)).Result.Succeeded
			|| (AuthorizationService.AuthorizeAsync(User, Permissions.Communities.Edit)).Result.Succeeded)
			{
				<th>Actions</th>
			}
		</tr>
	</thead>
	<tbody>

		@foreach (var community in Model)
		{
			<tr>
				<td>
					@community.Id
				</td>
				<td>
					@community.Name
				</td>
				@if ((AuthorizationService.AuthorizeAsync(User, Permissions.Communities.Delete)).Result.Succeeded || (AuthorizationService.AuthorizeAsync(User, Permissions.Communities.Edit)).Result.Succeeded)
				{
					<td text-right">
						<div class="btn-group">
							<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Action
							</button>
							<div class="dropdown-menu shadow animated--grow-in">
								@if ((AuthorizationService.AuthorizeAsync(User, Permissions.Communities.Edit)).Result.Succeeded)
								{
									<a onclick="jQueryModalGet('/entities/community/OnGetCreateOrEdit?id=@community.Id','Edit Community')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>

								}
								@if ((AuthorizationService.AuthorizeAsync(User, Permissions.Communities.Delete)).Result.Succeeded)

								{
									<form id="form_delete_@community.Id" asp-area="Entities" asp-controller="Community" method="post" asp-action="OnPostDelete" asp-route-id="@community.Id" onsubmit="return jQueryModalDelete(this)">
										<a href="javascript:$('#form_delete_@community.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
									</form>
								}
							</div>
						</div>
					</td>
				}
			</tr>
		}
	</tbody>
</table>
<script>
	$(document).ready(function () {
		$("#brandTable").DataTable({
			language: {
				url: "//cdn.datatables.net/plug-ins/1.10.18/i18n/Ukrainian.json"
			},
		});;
	});
</script>
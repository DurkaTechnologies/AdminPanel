@using WebUI.Areas.Entities.Models
@model IEnumerable<WorkerViewModel>
<table id="brandTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>ІД</th>
            <th>ПІП</th>
            <th>Телефон</th>
            <th>Громада</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var worker in Model)
    {
    <tr>
        <td>@worker.Id</td>
        <td>@worker.Surname @worker.Name @worker.Lastname </td>
        <td>@worker.Phone</td>
        <td>@worker.CommunityId</td>

        <td class="text-right">
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Action
                </button>
                <div class="dropdown-menu shadow animated--grow-in">
                    <a onclick="jQueryModalGet('/catalog/brand/OnGetCreateOrEdit?id=@worker.Id','Edit Brand')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>
                    <form id="form_delete_@worker.Id" asp-area="Catalog" asp-controller="Brand" method="post" asp-action="OnPostDelete" asp-route-id="@worker.Id" onsubmit="return jQueryModalDelete(this)">
                        <a href="javascript:$('#form_delete_@worker.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                    </form>
                </div>
            </div>
        </td>
    </tr>
    }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#brandTable").DataTable();
    });</script>